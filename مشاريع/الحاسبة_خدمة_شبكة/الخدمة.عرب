__مهمةخدمة__()؛

متغير الرموز=مصفوفة()؛
  الرموز.اضافة("÷")؛
  الرموز.اضافة("×")؛
  الرموز.اضافة("-")؛
  الرموز.اضافة("+")؛
  
متغير س=جسون(الشبكة.بيانات_الخدمة()).القيمة("المدخلات")؛
متغير المدخل=س.العنصر(0)؛
متغير الحالي=س.العنصر(1)؛

مهمة عملية(المدخل,الحالي) {

 الحالي=نص.تقليم(الحالي)؛

متغير  مسافة=""؛

عندما (المدخل=="C"){
ارجاع 0؛
}
	
عندما (المدخل=="."){
عندما(نص.بحث(الحالي,".")>-1) المدخل=""؛
}
	
	
عندما (المدخل=="=") {
الحالي=نص.استبدال(الحالي,"×","*")؛
الحالي=نص.استبدال(الحالي,"÷","/")؛
 ارجاع رياضيات.قيمة(الحالي)؛
 }
 
 عندما (الحالي=="0") الحالي = ""؛
 
   تكرار(متغير أ=0؛أ<الرموز.الطول؛أ++)
 عندما(نص.ينتهي(الحالي,الرموز.العنصر(أ))) 
 مسافة=" "؛
 
 
 عندما (المدخل=="+" أو المدخل=="-" أو المدخل=="×" أو المدخل=="÷") {
 مسافة=" "؛ 

  تكرار(متغير أ=0؛أ<الرموز.الطول؛أ++)
 عندما(نص.ينتهي(الحالي,الرموز.العنصر(أ))) 
 المدخل=""؛
 }
 عندما (المدخل==">>") {
 عندما (الحالي=="خطأ") ارجاع "0"؛
 عندما (نص.الطول(الحالي)==0  أو نص.الطول(الحالي)==1) ارجاع "0"؛
 الحالي=نص.الحروف(الحالي,0,نص.الطول(الحالي)-1)؛
 ارجاع الحالي؛
 }
  ارجاع الحالي+ مسافة + المدخل + مسافة؛
}

متغير النتيجة= جسون("{’القيمة’:’" + عملية(المدخل,الحالي) + "’}")؛
الشبكة.النتيجة(النتيجة)؛
