
مهمة عملية(المدخل,الحالي) {

 الحالي=نص.تقليم(الحالي)؛

متغير مسافة=""؛

عندما (المدخل=="C"){
ارجاع 0؛
}
	
عندما (المدخل=="."){
عندما(نص.بحث(الحالي,".")>-1) المدخل=""؛
}
	
	
عندما (المدخل=="=") {
الحالي=نص.استبدال(الحالي,"×","*")؛
الحالي=نص.استبدال(الحالي,"÷","/")؛
 ارجاع رياضيات.قيمة(الحالي)؛
 }
 
 عندما (الحالي=="0") الحالي = ""؛
 
 عندما (المدخل=="+" أو المدخل=="-" أو المدخل=="×" أو المدخل=="÷") {
 مسافة=" "؛
 
}
 
 
 
 عندما (المدخل==">>") {
 الحالي=نص.الحروف(الحالي,0,نص.الطول(الحالي)-1)؛
 ارجاع الحالي؛
 }
  ارجاع الحالي+ مسافة + المدخل؛
}


مهمة نقر(المدخل){
متغير النتيجة=الصفحة.العنصر("النتيجة")؛
متغير الناتج=عملية(المدخل,النتيجة.النص)؛
النتيجة.النص=الناتج؛
}


